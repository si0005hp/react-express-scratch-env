{
  "name": "react-express-scratch-env",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "7",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.2.0",
    "chai-enzyme": "^1.0.0-beta.1",
    "concurrently": "^4.1.2",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "eslint-plugin-react": "^7.14.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "jsdom": "^15.1.1",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "react-addons-test-utils": "^15.6.2",
    "sinon": "^7.4.2",
    "style-loader": "^1.0.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "config": "^3.2.2",
    "express": "^4.17.1",
    "log4js": "^6.4.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "scripts": {
    "client": "webpack-dev-server --config ./config/webpack.config.dev.js --open --mode development",
    "build": "webpack --config ./config/webpack.config.js --mode production",
    "server": "nodemon src/server/server.js --exec babel-node",
    "dev": "NODE_ENV=development concurrently \"npm run client\" \"npm run server\"",
    "start": "NODE_ENV=production npm run build && npm run server",
    "precommit": "lint-staged",
    "lint": "eslint src --fix -c .eslintrc.json 'src/**/*.js'",
    "test": "mocha --require ./test/enzyme.js --require babel-core/register --recursive $(find test -name '*.spec.js')"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}